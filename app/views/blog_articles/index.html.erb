<%= render 'partials/header' %>

<div class="container">
  
  <h1 class="gold-title">Las ultimas Cripto-Noticias</h1>
      
      <div class="row">
          
        <% @blog_articles.each do |blog_article| %>
          
          <div class="col-lg-4">
            
            <div class="card">
              <img class="card-img-top" src="<%= blog_article.image_url %>" alt="Card image cap">
              <div class="card-body">
                <h5 class="card-title"><%= blog_article.title %></h5>
                <p class="card-text"><%= truncate blog_article.content, length: 100 %></p>
                <a href="<%= blog_article.url %>" class="btn btn-primary float-right">Ver</a>
                <%= blog_article.source %>
                <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
              </div>
            </div>
          </div>

  <!--           <td></td>
            <td><%# link_to 'Show', blog_article %></td>
            <td><%# link_to 'Edit', edit_blog_article_path(blog_article) %></td>
            <td><%# link_to 'Destroy', blog_article, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
        <% end %>
      </div>

  <%= link_to 'New Blog Article', new_blog_article_path %>
  
</div>

