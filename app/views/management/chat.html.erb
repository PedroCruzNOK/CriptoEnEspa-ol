<%= render 'partials/header_admin' %>

<div class="container-fluid bg white">
  <div class="row">
    <div class="col-md-9">
      <ul id="conversations-list">
        <% @conversations.each do |conversation| %>
          <%= render 'conversations/conversation', conversation: conversation, user: current_user %>
        <% end %>
      </ul>
    </div>

    <div class="col-md-3">
      <div class="card text-white bg-info mb-3" id="chatUsersList">
        <div class="card-header">
          <h3 class="card-title">Lista de Usuarios</h3>
        </div>
        <div class="card-body">
          <ul>
            <% @users.each do |user| %>
              <li><%= link_to user.email, conversations_path(user_id: user), remote: true, method: :post %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>