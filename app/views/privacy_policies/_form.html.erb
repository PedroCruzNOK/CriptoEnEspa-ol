<%= tinymce_assets %>

<%= form_with(model: privacy_policy, local: true) do |form| %>
  <% if privacy_policy.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(privacy_policy.errors.count, "error") %> prohibited this privacy_policy from being saved:</h2>

      <ul>
      <% privacy_policy.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :content, 'Contenido' %>
    <%= form.text_area :content, id: :privacy_policy_content, class: 'tinymce', rows: 18 %>
  </div>


  <div class="form-group">
    <%= form.label :version, 'Version' %>
    <%= form.text_field :version, id: :privacy_policy_version %>
  </div>

  <div class="row">
    <div class="col-sm-12 text-right">
      
      <%= form.submit class:'btn btn-primary btn-lg' %>
    </div>
  </div>
<% end %>

