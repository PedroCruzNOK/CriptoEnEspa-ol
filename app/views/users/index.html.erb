<%= render 'partials/header_admin' %>

<div class="container-fluid bg white padding padding-large">
  
  <h1>Usuarios del sistema</h1>

  <table class="table">
    <thead>
      <tr>
        <th>Email</th>
        <th>Nombre</th>
        <th>Registro</th>
        <th>Acciones</th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.name %></td>
        <td><%= user.created_at %></td>
        <td><%= link_to 'editar', '', class: 'btn btn-secondary disabled' %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>